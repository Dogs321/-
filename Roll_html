<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <title>자캐팸 돌림판</title>
  <style>
    body { text-align: center; font-family: sans-serif; }
    #wheel {
      width: 300px; 
      height: 300px; 
      border: 10px solid #444; 
      border-radius: 50%; 
      margin: 20px auto; 
      position: relative; 
      overflow: visible;
    }
    #pointer {
      width: 0; 
      height: 0; 
      border-left: 20px solid transparent; 
      border-right: 20px solid transparent; 
      border-bottom: 30px solid red; 
      position: absolute; 
      top: -40px; 
      left: 50%; 
      transform: translateX(-50%);
      z-index: 10;
    }
    button { font-size: 16px; padding: 10px 20px; margin-top: 20px;}
  </style>
</head>
<body>
  <h1>자캐팸 랜덤 돌림판</h1>
  <div id="wheel">
    <canvas id="canvas" width="300" height="300"></canvas>
    <div id="pointer"></div>
  </div>
  <button onclick="spin()">돌리기!</button>
  <p id="result"></p>

  <script>
    const options = ["공격 성공", "공격 성공", "공격 실패", "공격 성공", "실수", "공격 성공", "실수", "크리티컬"];
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");
    const arc = 2 * Math.PI / options.length;
    let currentAngle = 0;

    function drawWheel() {
      for (let i = 0; i < options.length; i++) {
        const angle = i * arc;
        ctx.beginPath();
        ctx.moveTo(150, 150);
        ctx.arc(150, 150, 150, angle, angle + arc);
        ctx.fillStyle = i % 2 === 0 ? "#f8c291" : "#6a89cc";
        ctx.fill();
        ctx.save();
        ctx.translate(150, 150);
        ctx.rotate(angle + arc / 2);
        ctx.fillStyle = "#000";
        ctx.font = "14px sans-serif";
        ctx.fillText(options[i], 60, 5);
        ctx.restore();
      }
    }

    drawWheel();

    function spin() {
      // 회전 각도: 최소 1080도 (3바퀴) + 0~360도 랜덤
      const extraRotation = Math.random() * 360;
      const rotation = 1080 + extraRotation;
      currentAngle += rotation;

      // 회전시간 1.5초 (기존 3초에서 반으로 단축)
      canvas.style.transition = "transform 1.5s ease-out";
      canvas.style.transform = `rotate(${currentAngle}deg)`;

      // 결과 계산
      // 회전 각도의 나머지를 이용해 현재 위치 계산
      const normalized = currentAngle % 360;
      const index = Math.floor(((360 - normalized) / 360) * options.length);
      const result = options[index % options.length];

      setTimeout(() => {
        document.getElementById("result").innerText = `결과: ${result}`;
      }, 1500);
    }
  </script>
</body>
</html>
